<table class="table table-hover table-borderless">
  <thead class="table-light">
    <tr>
      <th>Team</th>
      <th>Opponent</th>
      <th>Runs</th>
      <th>Wickets</th>
      <th>Overs</th>
      <th>Match Date</th>
      <th>
        <div class="float-end">
          <a href="/cricket/addOrEdit" class="btn btn-sm btn-success">+ Add</a>
        </div>
      </th>
    </tr>
  </thead>
  <tbody>
    {{#each scores}}
      <tr>
        <td>{{this.team}}</td>
        <td>{{this.opponent}}</td>
        <td>{{this.runs}}</td>
        <td>{{this.wickets}}</td>
        <td>{{this.overs}}</td>
        <td>{{this.matchDate}}</td>
        <td>
          <form action="/cricket/delete/{{this._id}}" method="post">
            <a
              href="/cricket/addOrEdit/{{this._id}}"
              class="btn btn-sm btn-link"
            >Edit</a>
            <button type="submit" class="btn btn-sm btn-outline-danger">
              DEL
            </button>
          </form>
        </td>
      </tr>
    {{/each}}
  </tbody>
</table>